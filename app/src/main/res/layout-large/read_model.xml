<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="false"
    android:background="#111010"
    android:visibility="visible">

    <TextView
        android:id="@+id/deviceVers"
        android:layout_width="250dp"
        android:layout_height="41dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="210dp"
        android:fontFamily="@font/doppio_one"
        android:gravity="center_horizontal"
        android:text="Device Version"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcometext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="535dp"
        android:fontFamily="@font/doppio_one"
        android:foregroundGravity="center_horizontal"
        android:text="Welcome"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/methodtext"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcometext"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="66dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="405dp"
        android:layout_weight="0"
        android:fontFamily="@font/doppio_one"
        android:gravity="center_horizontal"
        android:text="Please tag on the device to obtain your device information"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="151dp"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="133dp"
        android:background="@drawable/rouded_button"
        android:text="CONTINUE"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deviceInfo"
        android:layout_width="188dp"
        android:layout_height="60dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="291dp"
        android:fontFamily="@font/doppio_one"
        android:gravity="center_horizontal"
        android:text="Device Type"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>